<XMBML version="1.0">

<!-- HENBrew Store > About (here)-->

		<View id="henbrew_store_about_main"> 
		<Attributes>
			<Table key="henbrew_store_update">
				<Pair key="icon"><String>http://raw.githubusercontent.com/ShaolinAssassin/HENBrew-Store/master/update_status/XX.XX.png</String></Pair>
				<Pair key="title"><String>Update HENBrew Store</String></Pair>
				<Pair key="info"><String>Download and install the latest HENBrew Store and refresh XMB (exit user session)</String></Pair>
			</Table>
			<Table key="henbrew_store_version">
				<Pair key="icon"><String>/dev_hdd0/game/HENBSTORE/USRDIR/ICONS/about.png</String></Pair>
				<Pair key="title"><String>XX.XX</String></Pair>
				<Pair key="info"><String>Press Ô¢Å to access changelog</String></Pair>
			</Table>			
		</Attributes>		
			<Items>
				<Query 
					class="type:x-xmb/folder-pixmap"
					key="henbrew_store_update"
					attr="henbrew_store_update"
					src="#henbrew_store_update_main"
					/> 
				<Query 
					class="type:x-xmb/folder-pixmap" 
					key="henbrew_store_version" 
					attr="henbrew_store_version"
					src="#henbrew_store_changelog"
					/>
			</Items>
		</View>

<!-- HENBrew Store > About > Update HENBrew Store -->

	<View id="henbrew_store_update_main"> 
		<Attributes> 
			<Table key="henbrew_store_update_link"> 
				<Pair key="info"><String>net_package_install</String></Pair> 
				<Pair key="pkg_src"><String>http://henbrewstore.pbworks.com/w/file/fetch/133873491/Latest_HENBrew_Store_signed.pkg?force_download=1</String></Pair> 
				<Pair key="pkg_src_qa"><String>http://henbrewstore.pbworks.com/w/file/fetch/133873491/Latest_HENBrew_Store_signed.pkg?force_download=1</String></Pair> 
				<Pair key="content_name"><String>tool_pkg_install_pc</String></Pair> 
				<Pair key="content_id"><String>UP0100-HENBSTORE_00-0SHAOLINASSASSIN</String></Pair> 
				<Pair key="prod_pict_path"><String>/dev_hdd0/game/HENBSTORE/USRDIR/ICONS/update.png</String></Pair> 
			</Table> 
		</Attributes> 
		<Items> 
			<Item class="type:x-xmb/xmlnpsignup" key="henbrew_store_update_link" attr="henbrew_store_update_link"/> 
		</Items> 
	</View> 
	
<!-- HENBrew Store > About > Changelog (here) -->
			
	<View id="henbrew_store_changelog"> 
		<Attributes>
			<Table key="henbrew_store_last_changes">
				<Pair key="icon"><String>/dev_hdd0/game/HENBSTORE/USRDIR/ICONS/logo.png</String></Pair>
				<Pair key="title"><String>XX.XX</String></Pair>
				<Pair key="info"><String>Initial release
				</String></Pair>
			</Table>
		</Attributes>
		<Items>
			<Query 
				class="type:x-xmb/module-action" 
				key="henbrew_store_last_changes" 
				attr="henbrew_store_last_changes"
				/>
		</Items>
	</View>

</XMBML>